{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "prettier",
    "prettier/flowtype",
    "plugin:flowtype/recommended"
  ],
  "plugins": ["prettier", "flowtype", "flowtype-errors"],
  "env": {
    "jest": true
  },
  "rules": {
    "flowtype-errors/show-errors": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true,
        "trailingComma": "all"
      }
    ]
  }
}
